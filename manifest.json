{
  "manifest_version": 3,
  "name": "Zucker for Facebook",
  "version": "0.0.2.3",
  "icons": { "128": "thumbnail-128x128.png",
              "48": "thumbnail-128x128_1_48x48.png" },
  "content_scripts": [
    {
    "matches": [
      "https://www.facebook.com/*"
    ],
    "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage"
  ],
  "description": "Zucker is an extension that hides facebook features."
}